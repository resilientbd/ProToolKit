<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.tools.document.DocumentPageEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Edit Page"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:layout_scrollFlags="scroll|enterAlways" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Full-screen image preview -->
    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/image_view_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="96dp"
        android:background="?attr/colorSurface"
        android:contentDescription="Document preview"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Top action/filter bar -->
    <LinearLayout
        android:id="@+id/top_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_card_surface"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:translationY="-100dp"
        android:animateLayoutChanges="true"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_action"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Action"
            android:textAllCaps="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_filter"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Filter"
            android:textAllCaps="true" />

    </LinearLayout>

    <!-- Filter selection horizontal recycler view -->
    <HorizontalScrollView
        android:id="@+id/filter_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="60dp"
        android:background="@drawable/bg_card_surface"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:translationY="-100dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/filter_options_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Filter options will be added dynamically in code -->
            <!-- Each filter will have a preview thumbnail and label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">
                
                <ImageView
                    android:id="@+id/btn_filter_original"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:minWidth="80dp"
                    android:minHeight="80dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_surface"
                    android:padding="2dp"
                    android:contentDescription="Original" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Original"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">
                
                <ImageView
                    android:id="@+id/btn_filter_gray"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:minWidth="80dp"
                    android:minHeight="80dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_surface"
                    android:padding="2dp"
                    android:contentDescription="Gray" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gray"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">
                
                <ImageView
                    android:id="@+id/btn_filter_bw"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:minWidth="80dp"
                    android:minHeight="80dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_surface"
                    android:padding="2dp"
                    android:contentDescription="Black and White" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B&amp;W"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">
                
                <ImageView
                    android:id="@+id/btn_filter_boost"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:minWidth="80dp"
                    android:minHeight="80dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_surface"
                    android:padding="2dp"
                    android:contentDescription="Color Boost" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boost"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Bottom action bar -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="?attr/colorSurface"
        app:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_rotate_right"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@drawable/ic_camera"
                android:contentDescription="Rotate" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_crop"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@drawable/ic_edit_crop"
                android:contentDescription="Crop" />



        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- Apply button (like GCAM) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_done"
        android:contentDescription="Apply changes"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        app:fabSize="normal" />

    <!-- Adjustments bottom sheet dialog -->
    <LinearLayout
        android:id="@+id/adjustments_sheet"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_card_surface"
        android:elevation="16dp"
        android:translationY="-300dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjustments"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Contrast control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Contrast"
                android:textAppearance="?attr/textAppearanceBodyMedium" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_contrast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:value="1.0"
                android:valueFrom="0.0"
                android:valueTo="2.0"
                android:stepSize="0.1"
                app:tickVisible="false"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/contrast_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="1.0"
                android:textAlignment="viewEnd"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Brightness control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Brightness"
                android:textAppearance="?attr/textAppearanceBodyMedium" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_brightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:value="0.0"
                android:valueFrom="-1.0"
                android:valueTo="1.0"
                android:stepSize="0.1"
                app:tickVisible="false"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/brightness_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="0.0"
                android:textAlignment="viewEnd"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Sharpen control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Sharpen"
                android:textAppearance="?attr/textAppearanceBodyMedium" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_sharpen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:value="0.0"
                android:valueFrom="0.0"
                android:valueTo="2.0"
                android:stepSize="0.1"
                app:tickVisible="false"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/sharpen_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="0.0"
                android:textAlignment="viewEnd"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Reset button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>