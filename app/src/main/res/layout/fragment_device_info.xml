<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_screen"
    tools:context=".ui.tools.device.DeviceInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Device Overview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Overview"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textManufacturer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Manufacturer: Google" />

                    <TextView
                        android:id="@+id/textModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Model: Pixel 7 Pro" />

                    <TextView
                        android:id="@+id/textBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Brand: Google" />

                    <TextView
                        android:id="@+id/textOsVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Android 14 (SDK 34)" />

                    <TextView
                        android:id="@+id/textBuildNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Build: TP1A.220624.021" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Hardware Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hardware Information"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textBoard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Board: raven" />

                    <TextView
                        android:id="@+id/textBootloader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Bootloader: raven-12345.67.89" />

                    <TextView
                        android:id="@+id/textHardware"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Hardware: raven" />

                    <TextView
                        android:id="@+id/textProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Product: raven" />

                    <TextView
                        android:id="@+id/textRadioVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Radio Version: G8225.52.1234.4" />

                    <TextView
                        android:id="@+id/textFingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Fingerprint: google/raven/raven:14/..." />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Storage Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storage Information"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Total Storage: 238.45 GB" />

                    <TextView
                        android:id="@+id/textStorageFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Free Storage: 156.78 GB" />

                    <TextView
                        android:id="@+id/textInternalStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Internal Storage: 58.24 GB" />

                    <TextView
                        android:id="@+id/textExternalStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="External Storage: Not available" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Memory Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memory Information"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textMemoryTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Total RAM: 11.25 GB" />

                    <TextView
                        android:id="@+id/textMemoryFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Available RAM: 4.56 GB" />

                    <TextView
                        android:id="@+id/textMemoryClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Memory Class: 512 MB" />

                    <TextView
                        android:id="@+id/textMemoryThreshold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Low Memory Threshold: 100 MB" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Network Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Network Information"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textNetworkType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Network Type: LTE - 4G" />

                    <TextView
                        android:id="@+id/textNetworkCarrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Carrier: Verizon" />

                    <TextView
                        android:id="@+id/textIpAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="IP Address: 192.168.1.100" />

                    <TextView
                        android:id="@+id/textMacAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="MAC Address: 00:11:22:33:44:55" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Screen Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screen Information"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textScreenSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Screen Size: 6.7 inches" />

                    <TextView
                        android:id="@+id/textScreenResolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Resolution: 3120 x 1440" />

                    <TextView
                        android:id="@+id/textScreenDensity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Density: 3.5 (xxxhdpi)" />

                    <TextView
                        android:id="@+id/textScreenOrientation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Orientation: Portrait" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CPU Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU Information"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textCpuModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Model: arm64-v8a" />

                    <TextView
                        android:id="@+id/textCpuCores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Cores: 8" />

                    <TextView
                        android:id="@+id/textCpuArch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Architecture: aarch64" />

                    <TextView
                        android:id="@+id/textCpuFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="Frequency: 2.85 GHz" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Capabilities Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supported Features"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textSupportedAbis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:maxLines="3"
                        android:ellipsize="end"
                        tools:text="ABIs: [arm64-v8a, armeabi-v7a, armeabi]" />

                    <TextView
                        android:id="@+id/textGlEsVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        tools:text="OpenGL ES: 3.2" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Refresh Button and Progress -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRefresh"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/device_info_refresh"
            android:layout_gravity="start" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:indicatorSize="40dp"
            android:layout_marginTop="@dimen/spacing_medium" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>