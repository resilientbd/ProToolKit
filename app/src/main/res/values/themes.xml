<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ProToolkit" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorOnSecondary">@color/brand_on_secondary</item>
        <item name="colorTertiary">@color/brand_tertiary</item>
        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorSurfaceVariant">@color/brand_surface_variant</item>
        <item name="colorOutline">@color/brand_outline</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
        <item name="actionBarTheme">@style/ThemeOverlay.ProToolkit.Toolbar</item>
        <item name="toolbarStyle">@style/Widget.ProToolkit.Toolbar</item>
        <item name="materialCardViewStyle">@style/Widget.ProToolkit.Card</item>
        <item name="bottomNavigationStyle">@style/Widget.ProToolkit.BottomNav</item>
        <item name="android:windowBackground">@color/brand_background</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="ThemeOverlay.ProToolkit.Toolbar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
    </style>

    <style name="Widget.ProToolkit.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.ProToolkit.Toolbar</item>
    </style>

    <style name="Widget.ProToolkit.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/navigation_item_tint</item>
        <item name="itemTextColor">@color/navigation_item_tint</item>
        <item name="itemRippleColor">@color/navigation_item_ripple</item>
    </style>

    <style name="Widget.ProToolkit.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="android:foregroundGravity">center</item>
        <item name="android:minHeight">@dimen/tool_card_min_height</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="TextAppearance.ProToolkit.Toolbar" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/brand_on_primary</item>
    </style>

</resources>
